<search:options xmlns:search="http://marklogic.com/appservices/search">
  <search:debug>false</search:debug>


  <search:additional-query>
  <cts:collection-query xmlns:cts="http://marklogic.com/cts">
    <cts:uri>gcsdata</cts:uri>
